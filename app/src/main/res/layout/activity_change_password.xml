<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.pura.activity.ChangePasswordActivity">


    <include
        android:id="@+id/include_toolbar_change_password"
        layout="@layout/toolbar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_toolbar_change_password"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/et_old_password"
            style="@style/EditTextStyleSignUp"
            android:drawableLeft="@drawable/password_black"
            android:hint="Old Password"
            android:inputType="textPassword" />


        <EditText
            android:id="@+id/et_new_password_change"
            style="@style/EditTextStyleSignUp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/password_black"
            android:hint="New Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/et_confirm_new_password_change"
            style="@style/EditTextStyleSignUp"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/password_black"
            android:hint="Confirm Old Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_save_change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_button"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

    </LinearLayout>


</RelativeLayout>
