<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.pura.activity.EnterOptActivity">


    <ImageView
        android:id="@+id/iv_logo_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/pura_logo" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo_signup"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_enter_code_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter code received on your registered mobile number"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_enter_code"
            style="@style/EditTextStyleSignUp"
            android:layout_below="@id/tv_enter_code_description"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/enter_code"
            android:hint="Enter Code" />


        <Button
            android:id="@+id/btn_submit_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/et_enter_code"
            android:layout_marginTop="16dp"
            android:background="@drawable/drawable_button"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_submit_code"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/btn_change_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="Change Mobile Number"
                android:textAllCaps="false"
                android:textSize="16dp" />


            <Button
                android:id="@+id/btn_resend_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="right|center_vertical"
                android:text="Resend Code"
                android:textAllCaps="false"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/aisa_logo" />
</RelativeLayout>
